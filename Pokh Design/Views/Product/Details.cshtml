@model Product

    <div class="thumbnail">
        <img alt="@Model.Name" src="@Model.ImageUrl" />
        <div class="caption-full">
            <h3 class="pull-right">@Model.Price.ToString("c")</h3>
            <h3>
                <a href="#">@Model.Name</a>

            </h3>
            <p>@Model.ShortDescription</p>
            <p>@Model.LongDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-dogId="@Model.ProductId">
                    Add to cart
                </a>
            </p>

        </div>
    </div>
